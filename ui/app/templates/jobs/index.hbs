<div class="container">
  <section class="section">
    <div class="level">
      <div class="level-item has-text-centered">
        <div>
          <h3 class="title is-1">{{model.length}}</h3>
          <p class="heading">Total Jobs</p>
        </div>
      </div>
      <div class="level-item has-text-centered">
        <div>
          <h3 class="title is-1">{{pendingJobs.length}}</h3>
          <p class="heading">Pending</p>
        </div>
      </div>
      <div class="level-item has-text-centered">
        <div>
          <h3 class="title is-1">{{runningJobs.length}}</h3>
          <p class="heading">Running</p>
        </div>
      </div>
      <div class="level-item has-text-centered">
        <div>
          <h3 class="title is-1">{{deadJobs.length}}</h3>
          <p class="heading">Dead</p>
        </div>
      </div>
    </div>
    <table class="table is-striped">
      <thead>
        <tr>
          <td>Name</td>
          <td>Type</td>
          <td>Priority</td>
          <td>Status</td>
          <td>Groups</td>
          <td class="is-3">Allocation Status</td>
          <td># Lost</td>
        </tr>
      </thead>
      <tbody>
        {{#each model as |job|}}
          {{job-row job=job}}
        {{/each}}
      </tbody>
    </table>
  </section>
</div>
