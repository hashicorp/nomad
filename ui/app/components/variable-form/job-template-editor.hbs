{{did-insert this.establishKeyValues}}
<div class="key-value">
  <label>
    <span>
      Description
    </span>
    <Input
      @type="text"
      @value={{this.description}}
      {{on "input" this.updateDescription}}
      class="input value-input"
    />
  </label>
</div>
<div class="key-value">
  <label>
    <span>
      Job Template
    </span>
    <div
      {{code-mirror
        theme="hashi"
        mode="ruby"
        autofocus=false
        content=this.template
        onUpdate=(action this.updateTemplate)
      }}
    ></div>
  </label>
</div>
