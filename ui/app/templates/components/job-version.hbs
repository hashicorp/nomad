<div class="boxed-section-head is-light inline-definitions">
  Version #{{version.number}}
  <span class="bumper-left pair is-faded version-stability">
    <span class="term">Stable</span>
    <span class="badge is-light is-faded"><code>{{version.stable}}</code></span>
  </span>
  <span class="pair is-faded version-submit-date">
    <span class="term">Submitted</span>
    <span class="submit-date">{{moment-format version.submitTime "MM/DD/YY HH:mm:ss"}}</span>
  </span>
  {{#if version.diff}}
    <button class="button is-light is-compact pull-right" {{action "toggleDiff"}}>{{changeCount}} {{pluralize "Change" changeCount}}</button>
  {{else}}
    <span class="pull-right">No Changes</span>
  {{/if}}
</div>
{{#if isOpen}}
  <div class="boxed-section-body is-dark">
    {{job-diff diff=version.diff verbose=verbose}}
  </div>
{{/if}}
