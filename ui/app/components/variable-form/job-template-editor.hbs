{{did-insert this.establishKeyValues}}

<div>
  <label>
    <span>
      Description
    </span>
    <Input
      @type="text"
      @value={{this.description}}
      {{on "input" this.updateDescription}}
      class="input value-input"
      data-test-template-description
    />
  </label>
</div>

<Hds::CodeEditor
  data-test-template-json
  @language="ruby"
  @value={{this.template}}
  @onInput={{this.updateTemplate}}
  as |CE|
>
  <CE.Title>Job Template</CE.Title>
</Hds::CodeEditor>
