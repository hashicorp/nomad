  <form
    class="new-secure-variables"
    {{on "submit" this.saveNewVariable}}
  >
    {{!-- TODO: {{if this.parseError 'is-danger'}} on inputs --}}
    <div>
      <label>
        <span>Path</span>
        <Input
          @type="text"
          @value={{this.path}}
          placeholder="/path/to/variable"
          class="input" />
      </label>
    </div>
    {{#each this.keyValues as |entry|}}
    <div class="key-value">
      <label>
        <span>Key</span>
        <Input
          @type="text"
          @value={{entry.key}}
          class="input" />
      </label>
      <label>
        <span>Value</span>
        <Input
          @type="text"
          @value={{entry.value}}
          class="input" />
      </label>
      <button
        {{on "click" this.appendRow}}
        class="button is-light is-borderless" type="button">Add More</button>
    </div>
    {{/each}}
    <footer>
      <button
        class="button is-primary" type="submit">Add Variable</button>
        {{!-- TODO: conditionally pluralize "Variable" if multiple are being created at once --}}
    </footer>
  </form>
