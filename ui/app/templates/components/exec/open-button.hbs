{{#let (cannot "exec allocation" namespace=this.job.namespace) as |cannotExec|}}
  <Hds::Button
    data-test-exec-button
    @size="small"
    @text="Exec"
    @color="secondary"
    disabled={{cannotExec}}
    {{on "click" this.open}}
    {{keyboard-shortcut 
      label="Exec"
      pattern=(array "e" "x" "e" "c")
      action=this.open
    }}
    @icon="terminal-screen"
  />
{{/let}}

