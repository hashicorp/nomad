{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-7ad76705",
      "instance_type": "t2.medium",
      "ssh_username": "ubuntu",
      "iam_instance_profile": "packer_build",
      "ami_name": "nomad-e2e-{{timestamp}}",
      "tags": {
        "OS": "Ubuntu"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./linux",
      "destination": "/tmp/linux"
    },
    {
      "type": "shell",
      "script": "./linux/setup.sh"
    }
  ]
}
