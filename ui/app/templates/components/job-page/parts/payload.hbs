{{#if @job.payload}}
  <div class="boxed-section">
    <div class="boxed-section-head">
      Payload
    </div>
    <div class="boxed-section-body is-dark">
      {{#if @job.payloadJSON}}
        <JsonViewer @json={{@job.payloadJSON}} @fluidHeight={{true}} />
      {{else}}
        <pre class="cli-window is-elastic"><code>{{ @job.decodedPayload }}</code></pre>
      {{/if}}
    </div>
  </div>
{{/if}}
